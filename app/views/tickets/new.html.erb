
<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
       <%= @event.venue.name %>
       <br/>
       <%= @event.venue.full_address %>
      </div>

      <div class="pull-left">
        <%= fa_icon 'clock-o' %>
      </div>
      <div class="time-details"> 
        <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
      </div>


    </div>
  </div>
  <div class="row">
    <div class="col-md-11 col-md-offset-1">  
      <table class="table">
        <th> Ticket Type </th>
        <th> Unit Price </th>
        <th> Quantity </th>
        <th></th>
      
        <% @event.ticket_types.each do |type| %>
        <tr>
          <td> <%= type.name %> </td>
          <td> <%= number_to_currency(type.price, unit: 'VND ', precision: 0) %> </td>

          <%= form_tag event_tickets_path(event_id: @event.id,
              ticket_type_id: type.id) do |f| %>
            <td>
              <%= select_tag(:quantity, options_for_select(0..10))%>
            </td>
            <td>
              <%= submit_tag 'Purchase', class: 'btn btn-success btn-sm' %>
            </td>
          <% end %>
        </tr>
        <% end %> 
      </table>
    </div>
  </div>
</div>  

